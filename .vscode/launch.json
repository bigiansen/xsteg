    "version": "0.2.0",
    "configurations": [
        {
            "name": "Encode text",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug_win64/output/bin/xsteg/xsteg.exe",
            "args": ["-e", "-t", "COLOR_BLUE", "UP", "0.05", "0020",
                 "-ii", "sunrise.jpg", "-oi", "sunrise.encoded.png", "-df", "text.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_debug_win64/output/bin/xsteg",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "Decode text",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug_win64/output/bin/xsteg/xsteg.exe",
